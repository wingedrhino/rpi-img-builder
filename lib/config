#!/bin/bash
### DO NOT EDIT

VERSION="5.4.y"
crosscompile="1"
user="pi"
passwd="board"
COUNTRYCODE="US"
menuconfig="0"
edge="0"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" \
	  --backtitle "Raspberry Pi Image Builder" \
	  --title "Config Menu" \
	  --form "Choose:" \
15 35 7 \
	"Username:"	1 1	"$user" 		1 11 15 0 \
	"Password:"	2 1	"$passwd"  		2 11 15 0 \
	"Country Code:"	3 1	"$COUNTRYCODE"  	3 15 3 0 \
        "Branch:"   	4 1     "$VERSION"        	4 9 7 0 \
        "Edge Branch:"	5 1     "$edge"                 5 15 2 0 \
	"Menuconfig:"	6 1	"$menuconfig"  		6 15 2 0 \
	"Crosscompile:" 7 1	"$crosscompile" 	7 15 2 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo user='"' > tmp0
echo passwd='"' >> tmp0
echo COUNTRYCODE='"' >> tmp0
echo VERSION='"' >> tmp0
echo edge= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# clear screen
clear

# userdata
echo -e "\e[0;31m userdata file created."
echo
