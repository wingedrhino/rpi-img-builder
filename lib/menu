#!/bin/bash
### DO NOT EDIT

DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog --colors \
    --backtitle "Raspberry Pi Image Builder | Ubuntu 20.04 Focal Fossa" \
    --title "Boards" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" $HEIGHT $WIDTH 2 \
    "1" "Raspberry Pi 4B" \
    "2" "Raspberry Pi 3B/+" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo -e "\e[0;31m Program terminated.\e[0m"
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo -e "\e[0;31m Program aborted.\e[0m" >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo -e "\e[0;31m Program terminated.\e[0m"
      ;;
    1 )
      chmod +x lib/rpi4
      ./lib/rpi4
      ;;
    2 )
      chmod +x lib/rpi3
      ./lib/rpi3
      ;;
  esac
done
