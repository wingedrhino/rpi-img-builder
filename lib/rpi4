#!/bin/bash
### DO NOT EDIT

DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "Raspberry Pi Image Builder | Devuan Beowulf 3.0.0" \
    --title "Raspberry Pi 4B" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" $HEIGHT $WIDTH 4 \
    "1" "Make All" \
    "2" "Make Kernel" \
    "3" "Make ROOTFS" \
    "4" "Make Image" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo -e "\e[0;31m Program terminated.\e[0m"
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo -e "\e[0;31m Program aborted.\e[0m" >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo -e "\e[0;31m Program terminated.\e[0m"
      ;;
    1 )
      make all
      dialog --prgbox "Results:" "ls *.img *rootfs-aarch64* rpi4/*.deb" 30 60
      exit 0
      ;;
    2 )
      make kernel
      dialog --prgbox "Results:" "ls rpi4/*.deb" 30 60
      ;;
    3 )
      make rootfs
      dialog --prgbox "Results:" "ls *rootfs-aarch64*" 30 60
      ;;
    4 )
      make image
      dialog --prgbox "Results:" "ls *.img" 30 60
      ;;
  esac
done
